{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES5",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "/",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        // "paths": {} // will be used for module resolution
    },
    "include": [
        "src",
        "global.d.ts",
        "webpack.config.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}